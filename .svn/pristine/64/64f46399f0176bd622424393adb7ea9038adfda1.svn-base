<template>
    <div class="zoom" v-if="isShow">
        <transition name="fadeIn">
            <div class="content" :class="{'w100': type == 'loading'}">
                <i class="iconfont" v-if="icon" :class="{'loading': type == 'loading'}" v-html="icon"></i>
                <p>{{content}}</p>
            </div>
        </transition>
    </div>
</template>

<script>
export default {
    data() {
        return {
            isShow: true,
            icon: undefined,
            type: ""
        };
    },
    created() {},
    mounted() {
        if (this.time) {
            t && clearTimeout(t);
            let t = setTimeout(() => {
                this.close();
            }, this.time);
        }
    },
    methods: {
        close() {
            this.isShow = false;
        }
    }
};
</script>
