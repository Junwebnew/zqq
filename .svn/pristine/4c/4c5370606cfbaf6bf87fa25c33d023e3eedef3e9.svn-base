.fade-enter-active,
.fade-leave-active {
  transition: opacity .3s;
  -webkit-transition: opacity .3s;
  -moz-transition: opacity .3s;
  -ms-transition: opacity .3s;
  -o-transition: opacity .3s;
}

.fade-enter,
.fade-leave-active {
  opacity: 0
}


.junFadeIn {
  opacity: 1;
  animation: opacity .8s forwards;
  -moz-animation: opacity .8s forwards;
  -webkit-animation: opacity .8s forwards;
}

@keyframes opacity {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}

/* //动态效果 */
.fadeIn-enter-active,
.fadeIn-leave-active {
  transition: opacity 0.2s;
}

.fadeIn-enter,
.fadeIn-leave-to {
  opacity: 0;
}

/* //左右摇摆 */
.fade_swing:hover {
  animation: l_r 2s infinite linear;
}

@keyframes l_r {

  0%,
  100% {
    transform: rotate(20deg)
  }

  25% {
    transform: rotate(-20deg)
  }

  50% {
    transform: rotate(20deg)
  }

  75% {
    transform: rotate(-20deg)
  }
}
