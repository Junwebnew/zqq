                                <span class="cameraBox">
                                    <!-- <a v-if='search_type_index == 0' href="javascript:void(0);" @click="upload" class="photo"></a> -->
                                    <el-upload v-show='search_type_index == 0' class="avatar-uploader " :action="$store.state.upLoadUrl" :show-file-list="false" :on-success="handleAvatarSuccess" :before-upload="beforeAvatarUpload">
